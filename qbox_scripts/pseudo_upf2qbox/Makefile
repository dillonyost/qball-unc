

CXX=g++
LD=$(CXX)
LDFLAGS = -O3 -g
CXXFLAGS= -O3 -g

OBJS = upf2qso.o spline.o PeriodicTable.o

upf2qso: ${OBJS}
	$(LD) -o $@ $^ $(LDFLAGS) 
clean:
	rm -f *.o


#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------
.C.s:
	$(CXX) $(CXXFLAGS) $(INCLUDE) -S $<
#-------------------------------------------------------------------------------
